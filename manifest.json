{
    "manifest_version": 3,
    "name": "LinkedIn Profile Extractor",
    "version": "1.0",
    "description": "Extract LinkedIn profile data and send to backend.",
    "permissions": [
        "tabs",
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}